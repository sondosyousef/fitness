<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1D1CD"
    tools:context=".TimerActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Lets Start Timer"
        android:textSize="75px"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="348dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="79dp">


        <Button
            android:id="@+id/start"
            android:layout_width="152dp"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:onClick="onClickStart"
            android:text="start" />

        <Button
            android:id="@+id/pause"
            android:layout_width="157dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="162dp"
            android:layout_marginEnd="154dp"
            android:layout_marginRight="154dp"
            android:onClick="onClickReset"
            android:text="pause" />

        <Button
            android:id="@+id/stop"
            android:layout_width="166dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="52dp"
            android:onClick="onClickStop"
            android:text="â€œstop" />


    </RelativeLayout>

    <EditText
        android:id="@+id/addTime"
        android:layout_width="184dp"
        android:layout_height="61dp"
        android:maxLength="4"
        android:inputType="number"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="207dp"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="201dp" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="216dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:text="00.00.00"
        android:textSize="75px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="221dp"
        android:layout_marginRight="221dp"
        android:text="add Time in sec" />

    <Button
        android:id="@+id/goBACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="605dp"
        android:layout_marginBottom="16dp"
        android:onClick="setGoBack"
        android:text="BACK" />

</RelativeLayout>